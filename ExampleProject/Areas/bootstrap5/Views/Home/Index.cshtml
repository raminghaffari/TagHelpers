@using Rg.TagHelpers;
@using ExampleProject.Models
@using ExampleProject
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Rg.TagHelpers
@model paginateddto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>bootstrap5</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/RgPagination.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ExampleProject</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="col-xl-12 col-lg-12 col-sm-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-content widget-content-area text-center">
                        <div class="row" style="direction:rtl;">
                            <div class="col-sm-12">
                                <table class="table table-hover" style="width:100%" role="grid">


                                    <thead>
                                        <tr>
                                            <th scope="col">آیدی</th>
                                            <th scope="col">نام</th>
                                            <th scop="col">نام خانوادگی</th>
                                            <th scop="col">موبایل</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Humen)
                                        {
                                            <tr>
                                                <th scope="row">@item.Id</th>
                                                <td>@item.Name</td>
                                                <td>@item.Family</td>
                                                <td>@item.phonenumber</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <Paging-Tag rg-total-record="@Model.totalrow"
                                    rg-page-index="@Model.pageindex"
                                    rg-page-size="@Model.pagesize"
                                    rg-max-page="5"
                                    rg-query-string-key-page-no="pageindex"
                                    rg-query-string-key-page-size="pagesize"
                                    rg-show-page-size-nav="true"
                                    rg-show-first-last-button="true"
                                    rg-page-size-dropdown-items="3,5,8,11,14"
                                    rg-dark-mode="true"
                                    rg-page-size-label-text="نمایش"
                                    rg-page-of-pages-text="صفحه,از"
                                    rg-rtl-direction="true"
                                    rg-number-format="Farsi"
                                    rg-render-mode="Bootstrap5">
                        </Paging-Tag>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
